<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context="com.exchange.ross.exchangeapp.activity.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/setting_top">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_back_button"
            android:layout_gravity="bottom"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/settingsBackButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="28sp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="bottom"
            android:textColor="@color/white_color"
            android:id="@+id/settingsTopTextView"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingSoundTextView"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/settings_caption"
        android:text="Sound" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/soundSwitch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/setting_item_bg"
        android:textSize="@dimen/settings_option"
        android:text="Sound"
        android:layout_gravity="left"
        android:paddingLeft="15dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/vibrationSwitch"
        android:layout_marginTop="0dp"
        android:background="@drawable/setting_item_bg"
        android:textSize="@dimen/settings_option"
        android:switchPadding="39sp"
        android:text="Vibration"
        android:paddingLeft="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingMeetingTextView"
        android:text="Meeting"
        android:textSize="@dimen/settings_caption"
        android:layout_marginTop="22dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/statusBusySwitch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/setting_item_bg"
        android:textSize="@dimen/settings_option"
        android:text="Mute only 'Busy' meetings"
        android:paddingLeft="15dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/ignoreAllDaySwitch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/setting_item_bg"
        android:textSize="@dimen/settings_option"
        android:switchPadding="8dp"
        android:text="Ignore All Day events"
        android:paddingLeft="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textSize="@dimen/settings_caption"
        android:id="@+id/settingNotificationTextView"
        android:layout_marginTop="22dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/listSwitch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/setting_item_bg"
        android:textSize="@dimen/settings_option"
        android:text="List of meeting for a day"
        android:paddingLeft="15dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/timerSwitch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textSize="@dimen/settings_option"
        android:switchPadding="8dp"
        android:background="@drawable/setting_item_bg"
        android:text="Timer during meeting"
        android:paddingLeft="15dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/settingsLinkAccountButton"
            android:background="@drawable/refresh"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/settingsUnLinkAccountsButton"
            android:background="@drawable/refresh"/>

    </LinearLayout>

</LinearLayout>

